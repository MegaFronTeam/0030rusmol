mixin top-nav(cab) 
	// start top-nav
	+b.top-nav
		.container
			+e.inner
				.row
					.col-lg-auto.col
						+logo()
					.col-lg.order-lg-0.order-last
						.menu-mobile.menu-mobile--js
							.menu-mobile__inner
								+menu-toggle()
								+mnu()
					.col-auto
						+e.btn--cabinet(href="#")
							+icon("user")
							if cab
								img(src="img/avatar.png", alt="")
					.col-auto.d-lg-none
						+menu-toggle()
	// end top-nav