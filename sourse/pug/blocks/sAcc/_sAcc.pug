mixin sAcc(data)
	// start sAcc
	+b.sAcc.section#sAcc&attributes(attributes)
		.container
			.row
				.col-lg-6
					h1 Личный кабинет
					+e.caption Войдите в систему, чтобы воспользоваться всеми преимуществами
					+form-wrap
						.row
							.col-lg-6
								+input('Введите e-mail','text','Ваш логин')
							.col-lg-6
							.col-lg-6
								+input('Введите пароль','password','Пароль')
							.col-lg-6
							.col-lg-6
								.sAcc__forget!=`Забыли пароль? <a href="#"> Восстановить</a>`
								a.sAcc__login-btn.btn.btn-primary(href="#") Войти
				.col-lg-6
					+e.info-block
						//- +pic('acc-bg.jpg','',0)
						+e.info
							+e.info-caption Еще не зарегистрировались в системе?<br>Создайте аккаунт, это займет все 5 минут
							+e.info-btn.btn(href="#") Зарегистрироваться
	// end sAcc

mixin sAccReg(data)
	// start sAcc
	+b.sAcc.section#sAcc&attributes(attributes)
		.container
			.row
				.col-lg-6
					+b.btn-back(href="#")
						+icon('arrow-left')
					h1 Регистрация
					+e.caption Введите ваши данные чтобы воспользоваться всеми преимуществами системы
					+form-wrap
						+e.row.row
							.col-lg-6
								+input('Ваша фамилия','text','Фамилия')
							.col-lg-6
								+input('Ваше имя','text','Имя')
							.col-lg-6
								+input('Введите e-mail','text','E-mail')
							.col-lg-6
							.col-lg-6
								+input('Введите пароль','password','Пароль')
							.col-lg-6
								+input('Повторите пароль','password','Повторите пароль')
							.col-12
								+e.title Роли в форумах
							.col-lg-6
								+input('Введите наименования форума','select','Наименование форума')
							.col-lg-6
								+e.delete
									+input('Выбрать','select','Роль дирекции')
									a(href="#"): +icon('close')
							.col-lg-6
								+input('Введите наименования форума','select','Наименование форума')
								+e.remove(href="#") Удалить роль
							.col-lg-6
								+e.delete
									+input('Выбрать','select','Роль дирекции')
									a(href="#"): +icon('close')
							.col-lg-12
								+e.add(href="#")
									+icon('close')
									| Добавить
							.col-lg-6
								a.sAcc__login-btn.btn.btn-primary(href="#") Зарегистрироваться
						.sAcc__policy!=`Нажимая «Зарегистрироваться», я соглашаюсь c <a href="#>обработкой персональных данных</a> на условиях <a href="#>Политики конфиденциальности.</a>`
				.col-lg-6
					+e.info-block--reg
						//- +pic('acc-bg.jpg','',0)
						+e.info
							+e.info-caption--reg Уже есть аккаунт? Воспользуйтесь формой входа
							+e.info-btn.btn(href="#") Войти
	// end sAcc